<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PILChat" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/dark_bg</item>
        <item name="android:navigationBarColor">@color/dark_bg</item>
        <item name="android:windowBackground">@color/dark_bg</item>
    </style>

    <style name="Theme.PILChat.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.PILChat</item>
    </style>
</resources>
